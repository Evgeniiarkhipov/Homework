# ------------------------------Задание № 1----------------------------------------------
num = int(input("Введите число "))
if num > 0: print("num > 0")
elif num < 0: print("num < 0")
else: print("num = 0")
# ---------------------------------------------------------------------------------------

# -----------------------------------Задание № 2-----------------------------------------
num = int(input("Введите число "))
if num % 3 == 0: print("ok")
else: print(":(")
# ---------------------------------------------------------------------------------------

# -----------------------------------Задание № 3-----------------------------------------
num_month = int(input("Введите номер месяца "))
if num_month >= 1 and num_month <= 12: print("да")
else: print("нет")
# ---------------------------------------------------------------------------------------
